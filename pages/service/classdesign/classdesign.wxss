
page { 
  background-color: #fafafa;
  height: 100%;
  width: 100%;
}

.border-shadow {
  border: 1px #dee1e8 solid;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 25rpx #dee1e8;
}

.route{
  display: flex;
  height: 100%;
  width: 100%;
  margin-top: 0rpx;
  flex-direction: column;
}

.head {
  display: flex;
  height: 9%;
  width: 100%;
  background-color: #36465d;
  margin-bottom: 50rpx;
  color: white
}

.back_container {
  display: flex;
  width: 40rpx;
  height: 40rpx;
  margin: auto;
  margin-right: 0rpx;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}

.title{
  display: flex;
  margin: auto;
  margin-left: 230rpx;
  justify-content: center;
  align-items: center;
  color: white
}


.body{
  display: flex;
  height: 85%;
  width: 100%;
  flex-direction: column; 
}

.card{
  display: flex;
  width: 90%;
  height: 300rpx;
  background-color: white;
  margin: auto;
  margin-top: 20rpx;
  flex-direction: column;
  border-radius: 10px;
  font-size: 0.85rem;
  color: rgb(77, 76, 76);
  border-bottom: 1rpx solid #dfdfdf;
}

.card_head{
  display: flex;
  width: 100%;
  height: 30%;
}

.card_body{
  display: flex;
  width: 100%;
  height: 40%;
}

.card_bottom{
  display: flex;
  width: 100%;
  height: 30%;
}

.card_text {
  display:flex;
  width: 25%;
  height: auto;
  margin: auto;
  margin-left: 5%;
  margin-right: 0rpx
}

.result_text{
  display:flex;
  width: 60%;
  height: auto;
  margin: auto;
}




