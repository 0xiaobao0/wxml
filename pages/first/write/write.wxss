/* pages/first/first.wxss */
page { 
  background-color: #fafafa;
  height: 100%;
  width: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0rpx;
  box-sizing: border-box;
}

.card{
  height: 100%;
  width: 100%;
}

.card-head{
  display: flex;
  height: 8%;
  width: 100%;
  background-color: white;
}

.head-img{
  display: flex;
  width: 70rpx;
  height: 70rpx;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 20rpx;
  border-radius: 50%;
  background-color: white;
}

.head-nickname{
  width: 30%;
  height: 40rpx;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 1%;
  background-color: white;
  font-size: 30rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.nickname{
  margin-left: 20rpx;
  color: black;
}



