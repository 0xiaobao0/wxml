/* components /articalDisplay/articalDisplay.wxss */
.card{
  width: 100%;
  height: auto;
  margin-bottom: 40rpx;
}

.comment-area {
  display: flex;
  height: 600rpx;
  width: 90%;
  margin-top: 30%;
  margin-left: 5%;
  position: absolute;
  background-color: white;
  flex-direction: column;
  z-index: 999
}

.comment-area-head {
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: #fafafa;
  font-size: 0.9rem;
}

.comment-area-head-text {
  margin: auto;
  margin-left: 50rpx;
}

.close-comment{
  display: flex;
  width: 45rpx;
  height: 45rpx;
  margin: auto;
  margin-right: 40rpx
}

.comment-area-body {
  width: 100%;
  height: 550rpx;
  background-color: #f2f2f2;
  overflow: hidden;
}

.comment-area-body-area {
  display: flex;
  width: 95%;
  height: auto;
  margin: auto;
  word-break:break-all;
  flex-direction: column;
}


.comment-area-bottom {
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: #fafafa;
  font-size: 0.8rem
}

.comment-area-bottom-input {
  display: flex;
  width: 72%;
  height: 50rpx;

  margin: auto;
  margin-left: 5%;
}

.comment_input {
  width: 100%
}

.comment-area-bottom-commit {
  display: flex;
  width: 13%;
  height: 60rpx;

  margin: auto;
  margin-right: 5%;
}

.comment-area-bottom-commit-text {
  margin: auto
}

.card-head{
  display: flex;
  height: 100rpx;
  width: 100%;
  background-color: white;
  border-bottom: 1rpx solid #dfdfdf;
}

.head-img-wrapper {
  display: flex;
  width: 70rpx;
  height: 70rpx;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 5%;
}

.head-img{
  display: flex;
  width: 70rpx;
  height: 70rpx;
  margin: auto;
  border-radius: 50%;
  background-color: white;
}

.head-nickname{
  width: 400rpx;
  height: 40rpx;
  margin: auto;
  margin-left: 6%;
  background-color: white;
  font-size: 0.9rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.nickname{
  color: #aaa;
}


.card-body{
  display: flex;
  width: 100%;
  background-color: white;
  flex-direction: column-reverse;
}

.img-area{
  display: flex;
  width: 100%
}

.user_image{
  display: flex;
  width: 100%
}

.content-area{
  display: flex;
  height: auto;
  max-height: 300rpx;
  width: 100%;
  margin:auto;
  margin-top: 20rpx;
  background-color: white;
  font-size: 0.8rem;
  overflow: hidden;
  text-overflow:ellipsis;
}

.content{
  width: 90%;
  margin: auto;
  margin-bottom: 7rpx;
  overflow: hidden;
  overflow-wrap: break-word;
  text-overflow:ellipsis;
}



.tag-area{
  display: flex;
  height: 60rpx;
  width: 100%;
  margin:auto;
  background-color: white;
  font-size: 0.8rem;
  /* border-bottom: 1rpx solid #dfdfdf; */
  
}

.tag{
  display: flex;
  height: 45rpx;
  width: auto;
  margin:auto;
  margin-top: 15rpx;
  margin-left: 5%;
  background-color: #f4f5f9;
  font-size: 0.8rem;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  border-radius: 30rpx;
}

.tag-img{
  display: flex;
  height: 35rpx;
  width: 35rpx;
  margin: auto;
  margin-left: 10rpx;
}

.tag-text{
  display: flex;
  height: 45rpx;
  width: auto;
  max-width: 250rpx;
  margin: auto;
  margin-left: 20rpx;
  margin-right: 20rpx;
  font-size: 0.7rem;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: rgb(143, 143, 143)
  
}

.card-bottom{
  display: flex;
  height: 100rpx;
  width: 100%;
  margin:auto;
  background-color: white;
  font-size: 0.8rem;
  border-bottom: 1rpx solid #dfdfdf;
}

.heat-wrapper{
  height: 40rpx;
  width: 200rpx;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 5%;
  background-color: white;
  font-size: 30rpx;
}

.heat{
  color: #aaa;
}

.interact{
  display: flex;
  width: 250rpx;
  height: 60rpx;
  margin-top: auto;
  margin-bottom: auto;
  margin-left: 230rpx;
  background-color: white;
  flex-direction: row;
  justify-content: space-around;
}

.comment-wrapper{
  display: flex;
  height: 50rpx;
  width: 50rpx;
  margin-top: auto;
  margin-bottom: auto;
  background-color: white;
}


.transmit-wrapper{
  display: flex;
  height: 50rpx;
  width: 50rpx;
  margin-top: auto;
  margin-bottom: auto;
  background-color: white;
}

.share{
  display: flex;
  height: 50rpx;
  width: 50rpx;
  background-color: white;
  padding: 0rpx;
  border: none;
  border-radius: 0rpx;
  color: white;
}

.share::after{
  border: none;
  
}

.like-wrapper{
  display: flex;
  height: 50rpx;
  width: 50rpx;
  margin-top: auto;
}

